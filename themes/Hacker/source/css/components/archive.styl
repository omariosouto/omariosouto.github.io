article.archive
  padding 0
  margin 2em auto

.archive-post
  text-align left
  margin 2em auto

  .archive-title
    font-size 2.8em
    line-height 1
    position relative
    color #212121
    margin 0

    a
      color black

      span
        padding-bottom 3px
        -webkit-transition box-shadow 0.15s
        transition box-shadow 0.15s
        box-shadow inset 0 -2px 0 rgba(240, 56, 56, 0)

      &:hover
        color #212121

        span
          box-shadow inset 0 -2px 0 rgba(240, 56, 56, 0.4)


  time
    font-style italic

    a
      font-size 1.6rem
      color #9e9e9e

      &:before
        content '#'
      &:hover
        color #FF6A00

